{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background: linear-gradient(rgba(0,0,0,0.85),rgba(0,0,0,0.85)), url({{@blog.cover}}), no-repeat center center; background-position: center center; background-position: fixed; background-size: cover; {{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
            <div class="social">
                <div class="facebook">
                    <div class="fb-follow" data-href="https://www.facebook.com/inmobicareers" data-layout="button" data-show-faces="false"></div>
                </div>
                <div class="twitter">
                    <a href="https://twitter.com/inmobicareers" class="twitter-follow-button" data-show-count="false">Follow @inmobicareers</a>
                </div>
                <div class="linkedin">
                    <script src="//platform.linkedin.com/in.js" type="text/javascript"> lang: en_US</script>
                    <script type="IN/FollowCompany" data-id="272972"></script>
                </div>
                <!--
                <div class="facebook" title="Share link on Facebook">Facebook</div>
                <div class="twitter" data-via="inmobi @doselecthq" title="Share link on Twitter">Twitter</div>
                <div class="plusone" title="Share link on Google+">Google+</div>
                -->
            </div>
            <ul class="tag-list">
                <li class="cat1"><a class="scroll-smooth" href="#mafia">InMobi Mafia</a></li>
                <li class="cat2"><a class="scroll-smooth" href="#story">Our Story</a></li>
                <li class="cat3"><a class="scroll-smooth" href="#videos">Videos</a></li>
                <li class="cat4"><a class="scroll-smooth" href="#hackathons">Hackathons</a></li>
                <li class="cat5"><a class="scroll-smooth" href="#posts">Posts</a></li>
            </ul>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" style="margin-top: 100px;" class="index content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
